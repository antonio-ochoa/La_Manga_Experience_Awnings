---
interface Props {
    title: string,
    descr: string,
    svgUrl: string,
    svgAlt: string
}
const {title, descr, svgUrl, svgAlt } = Astro.props
---

<div class="card-benefit">
    <div class="circle">
        <img src={svgUrl} alt={svgAlt} />
    </div>
    <h3>{title}</h3>
    <p class="small">{descr}</p>
</div>

<style>
    .card-benefit {
        max-width: 360px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    .card-benefit .circle, .card-benefit img { aspect-ratio: 1 }
    .card-benefit .circle {
        height: 64px;
        align-content: center;
        background-color: var(--secondary);
        border-radius: 50%;
    }
    .card-benefit .circle img {
        height: 44px;
        margin-inline: auto;
    }
    .card-benefit h3 {
        padding-block: 12px 16px;
    }

    @media screen and (min-width: 768px) {
        .card-benefit .circle { height: 64px }
        .card-benefit .circle img { height: 44px }
        .card-benefit h3 { padding-block: 16px 20px }
    }
    @media screen and (min-width: 1280px) {
        .card-benefit .circle { height: 90px }
        .card-benefit .circle img { height: 64px }
        .card-benefit h3 { padding-block: 16px 24px }
    }
</style>