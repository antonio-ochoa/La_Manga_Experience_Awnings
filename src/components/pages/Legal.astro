---
import Layout from "@layouts/Layout.astro";
import { getI18N } from "@i18n/index";
const i18n = getI18N(Astro, "legal");

interface Text {
    TITLE: string,
    DESCRIPTION: string[]
}

const termsOfUse = i18n.TERMS_OF_USE
const intelProp: Text = i18n.INTELLECTUAL_PROPERTY
const limitOfLiab: Text = i18n.LIMITATION_OF_LIABILITY
const jurisAndLaw: Text = i18n.JURISDICTION_AND_LAWS
const changesToNoti: Text = i18n.CHANGES_TO_NOTICE

const standardSection = [intelProp, limitOfLiab, jurisAndLaw, changesToNoti]

const meta = i18n.META_TAGS;
---

<Layout title={meta.TITLE} descr={meta.DESCRIPTION} path="legal" index="index" follow="nofollow" animatedHeader="no">

    <section class="content-grid legal">
        <div class="full black-rectangle"></div>
        <h1>{i18n.TITLE}</h1>
        <p>{i18n.INTRO}</p>

        <h2>{termsOfUse.TITLE}</h2>
        <p>{termsOfUse.DESCRIPTION}</p>
        <ul>
            <li>- {termsOfUse.CONDITIONS[0]}</li>
            <li>- {termsOfUse.CONDITIONS[1]}</li>
            <li>- {termsOfUse.CONDITIONS[2]}</li>
        </ul>

        {standardSection.map((e) => (
            <div class="section">
                <h2>{e.TITLE}</h2>
                {e.DESCRIPTION.map((parragraph) => <p>{parragraph}</p> )}
            </div>
        ))}
    </section>

</Layout>

<style>
    section.legal { padding-bottom: 120px }
    section.legal .black-rectangle { width: 100%; height: 200px; background-color: var(--black); opacity: 0.85;}
    section.legal h1 { font-size: 52px; margin-block: 64px 24px }
    section.legal h2 { margin-block: 48px 16px}
    @media screen and (min-width: 768px) { section.legal { padding-bottom: 140px } }
    @media screen and (min-width: 1280px) { section.legal { padding-bottom: 200px } }
</style>