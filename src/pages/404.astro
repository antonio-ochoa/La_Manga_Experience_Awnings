---
import Layout from "@layouts/Layout.astro"
---

<Layout 
    title="404 | Page not found"
    descr="This page was not found"
    path=""
    index="noindex" follow="nofollow"
    error="404"
>
    <section class="content-grid error">
        <div class="black-rectangle"></div>
        <h1>Looks like something went wrong</h1>
        <p>Sorry, the page you are looking for does not exist. It might have been removed, had its name changed, or is temporarily unavailable.</p>
    </section>

</Layout>

<style>
    section.error { padding-bottom: 120px }
    section.error .black-rectangle { width: 100%; height: 200px; background-color: var(--black); opacity: 0.85;}
    section.error h1 { font-size: 52px; margin-block: 64px 24px }
    @media screen and (min-width: 768px) { section.error { padding-bottom: 140px } }
    @media screen and (min-width: 1280px) { section.error { padding-bottom: 200px } }
</style>